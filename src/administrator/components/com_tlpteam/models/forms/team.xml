<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

       <field name="id" type="text" default="0" label="COM_TLPTEAM_FORM_LBL_TEAM_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 

       <field name="name" type="text" size="40" class="inputbox"
            label="COM_TLPTEAM_FORM_LBL_TEAM_NAME"
            description="COM_TLPTEAM_FORM_DESC_TEAM_NAME" 
            required="true" 
            filter="safehtml" /> 

       <field name="position" type="text" size="40" class="inputbox"
            label="COM_TLPTEAM_FORM_LBL_TEAM_POSITION"
            description="COM_TLPTEAM_FORM_DESC_TEAM_POSITION" 
			filter="safehtml" /> 

       <field name="profile_image" type="file"
            label="COM_TLPTEAM_FORM_LBL_TEAM_PROFILE_IMAGE"
            description="COM_TLPTEAM_FORM_DESC_TEAM_PROFILE_IMAGE" 
            upload_directory="images/photos" /> 

		<field name="email" type="email" label="Email" description="" validate="email"   /> 

       <field name="phone" type="text" size="40" class="inputbox"
            label="COM_TLPTEAM_FORM_LBL_TEAM_PHONE"
            description="COM_TLPTEAM_FORM_DESC_TEAM_PHONE" 
          	filter="safehtml" /> 

       <field name="short_bio" type="textarea" rows="5" cols="5" 
			class="inputbox"
			filter="safehtml"
			label="COM_TLPTEAM_FORM_LBL_TEAM_SHORT_BIO"
			description="COM_TLPTEAM_FORM_DESC_TEAM_SHORT_BIO"  /> 

       <field name="detail_bio" type="editor" buttons="true"
			class="inputbox"
			filter="safehtml"
    		label="COM_TLPTEAM_FORM_LBL_TEAM_DETAIL_BIO"
            description="COM_TLPTEAM_FORM_DESC_TEAM_DETAIL_BIO"  /> 

       <field name="facebook" type="text" size="40" class="inputbox"
            label="COM_TLPTEAM_FORM_LBL_TEAM_FACEBOOK"
            description="COM_TLPTEAM_FORM_DESC_TEAM_FACEBOOK" 
            filter="safehtml" /> 

       <field name="twitter" type="text" size="40" class="inputbox"
            label="COM_TLPTEAM_FORM_LBL_TEAM_TWITTER"
            description="COM_TLPTEAM_FORM_DESC_TEAM_TWITTER" 
   			filter="safehtml" /> 
			
		<field name="googleplus" type="text" size="40" class="inputbox"
            label="COM_TLPTEAM_FORM_LBL_TEAM_GOOGLEPLUS"
            description="COM_TLPTEAM_FORM_DESC_TEAM_GOOGLEPLUS" 
    		filter="safehtml" /> 
			
       <field name="linkedin" type="text" size="40" class="inputbox"
            label="COM_TLPTEAM_FORM_LBL_TEAM_LINKEDIN"
            description="COM_TLPTEAM_FORM_DESC_TEAM_LINKEDIN" 
    		filter="safehtml" /> 

       <field name="web" type="text" size="40" class="inputbox"
            label="COM_TLPTEAM_FORM_LBL_TEAM_WEB"
            description="COM_TLPTEAM_FORM_DESC_TEAM_WEB" 
          	filter="safehtml" /> 

       <field name="created_by" type="createdby" default="" 
            label="COM_TLPTEAM_FORM_LBL_TEAM_CREATED_BY"
            description="COM_TLPTEAM_FORM_DESC_TEAM_CREATED_BY"  /> 

       <field
			name="state"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="inputbox"
			size="1"
			default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
        </field> 

        <field name="checked_out" type="hidden" filter="unset" />
        <field name="checked_out_time" type="hidden" filter="unset" />

	</fieldset>

</form>
