			.js_desc h3{
				margin: 20px 0px 10px 0px;
			}
			.js_desc img{
				width:40%;
				margin:5px 5px 5px 0px;
			}
			.js_desc p,.js_desc li{
				list-style: none outside none;
				padding: 5px 5px 5px 0px;
